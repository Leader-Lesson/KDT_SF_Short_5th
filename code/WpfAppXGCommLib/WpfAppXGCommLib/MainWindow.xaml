<Window x:Class="WpfAppXGCommLib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppXGCommLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="ComboBox_DataType" HorizontalAlignment="Left" Height="36" Margin="42,32,0,0" VerticalAlignment="Top" Width="148" IsDropDownOpen="True">
            <ComboBoxItem Content="X"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="W"/>
        </ComboBox>
        <ComboBox x:Name="ComboBox_DeviceType" HorizontalAlignment="Left" Height="36" Margin="233,32,0,0" VerticalAlignment="Top" Width="167">
            <ComboBoxItem Content="M"/>
            <ComboBoxItem Content="R"/>
            <ComboBoxItem Content="W"/>
        </ComboBox>
        <TextBox x:Name="TextBox_ByteOffset" HorizontalAlignment="Left" Margin="42,97,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBox_BitOffset" HorizontalAlignment="Left" Margin="233,97,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" TextChanged="TextBox_BitOffset_TextChanged"/>
        <TextBox x:Name="TextBox_1or0" HorizontalAlignment="Left" Height="28" Margin="42,137,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="103"/>
        <TextBox x:Name="TextBox_Result" HorizontalAlignment="Left" Margin="42,206,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="ButtonConnect" Content="Connect" HorizontalAlignment="Left" Margin="445,97,0,0" VerticalAlignment="Top" Click="ButtonConnect_Click" Height="39" Width="71"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="74" Text="Byte Offset"/>
        <TextBlock HorizontalAlignment="Left" Margin="233,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="139" Text="Size(Bit Offset)"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,192,0,0" TextWrapping="Wrap" Text="Result" VerticalAlignment="Top"/>

    </Grid>
</Window>
