<Window x:Class="WpfApp_00_Tutorial01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_00_Tutorial01"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,41,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Height="50" Width="704" FontSize="24"/>
        <RadioButton x:Name="HelloButton" Content="Hello"  HorizontalAlignment="Left" Margin="179,183,0,0" VerticalAlignment="Top" IsChecked="True" FontSize="24"  Height="41" Width="103"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="459,176,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Button Content="Display" HorizontalAlignment="Left" Margin="314,268,0,0" VerticalAlignment="Top" Height="74" Width="120" FontSize="24" Click="Button_Click" />
    </Grid>
</Window>
