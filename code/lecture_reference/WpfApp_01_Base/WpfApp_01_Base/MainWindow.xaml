<Window x:Class="WpfApp_01_Base.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_01_Base"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- #1. Tab Control-->
        <TabControl>
            <!-- 첫 번째 탭 -->
            <TabItem Header="학생 정보">
                <StackPanel Margin="10">
                    <TextBlock Text="이름: 홍길동"/>
                    <TextBlock Text="나이: 20세"/>
                </StackPanel>
            </TabItem>

            <!-- 두 번째 탭 -->
            <TabItem Header="수업 내용">
                <ListBox>
                    <ListBoxItem>수학</ListBoxItem>
                    <ListBoxItem>과학</ListBoxItem>
                    <ListBoxItem>국어</ListBoxItem>
                </ListBox>
            </TabItem>

            <!-- 세 번째 탭 -->
            <TabItem Header="기타">
                <TextBlock Text="기타 정보 탭입니다." 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
            </TabItem>
            <TabItem Header="그룹박스">
                
                <GroupBox Header="사용자 정보" Margin="10">
                    <StackPanel Margin="10">
                        <TextBlock Text="이름:" />
                        <TextBox Width="200" />
                        <TextBlock Text="나이:" />
                        <TextBox Width="200" />
                        <!-- 설명 텍스트 -->
                        <TextBlock Text="성별을 선택하세요:" FontSize="14" Margin="0,0,0,10"/>
                        <!-- 라디오 버튼 그룹 -->
                        <RadioButton x:Name="radioMale"
                     Content="남성"
                     GroupName="gender"
                     IsChecked="True"
                     Checked="radioMale_Checked"
                     Margin="0,0,0,5"/>

                        <RadioButton x:Name="radioFemale"
                     Content="여성"
                     GroupName="gender"
                     Checked="radioFemale_Checked"
                     Margin="0,0,0,15"/>

                        <!-- 버튼 -->
                        <Button Content="확인" Click="Button_Click"/>
                    </StackPanel>
                </GroupBox>
            </TabItem>
            <TabItem Header="슬라이더">
                <StackPanel Margin="20">
                    <!-- 설명 텍스트 -->
                    <TextBlock Text="볼륨 조절:" FontSize="14" Margin="0,0,0,10"/>

                    <!-- 슬라이더 -->
                    <Slider x:Name="volumeSlider"
                Minimum="0" Maximum="100"
                Value="30"
                TickFrequency="10"
                IsSnapToTickEnabled="True"
                ValueChanged="volumeSlider_ValueChanged" />

                    <!-- 현재 값 표시 -->
                    <TextBlock x:Name="volumeText" FontSize="16" Margin="0,10,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
