<Window x:Class="WpfApp_01_Base.Ex"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_01_Base"
        mc:Ignorable="d"
        Title="Ex" Height="200" Width="450">
    <Grid Background="White" Margin="20">
        <!-- 행 정의: 3행 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 아이디 -->
            <RowDefinition Height="Auto"/>
            <!-- 비밀번호 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 열 정의: 2열 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- 라벨 -->
            <ColumnDefinition Width="*"/>
            <!-- 입력창 -->
        </Grid.ColumnDefinitions>

        <!-- [1] 아이디 입력 -->
        <TextBlock Text="아이디:" Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1"
                 Margin="5" Width="200"/>

        <!-- [2] 비밀번호 입력 -->
        <TextBlock Text="비밀번호:" Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center" Margin="5"/>
        <PasswordBox x:Name="txtPw" Grid.Row="1" Grid.Column="1"
                     Margin="5" Width="200"/>

        <!-- [3] 로그인 버튼 -->
        <Button Content="로그인" Grid.Row="2" Grid.ColumnSpan="2"
                Margin="5" Padding="5"
                HorizontalAlignment="Center"
                Click="Button_Click"/>
    </Grid>
</Window>
